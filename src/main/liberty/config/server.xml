<?xml version="1.0" encoding="UTF-8"?>
<server description="Real World Example App Users Service">

    <featureManager>
        <!-- tag::servlet[] -->
        <feature>servlet-4.0</feature>
        <!-- end::servlet[] -->
        <!-- tag::springboot[] -->
        <feature>springBoot-2.0</feature>
        <!-- end::springboot[] -->
    </featureManager>

    <!-- tag::httpport[] -->
    <httpEndpoint id="defaultHttpEndpoint"
                  host="*"
                  httpPort="9080"
                  httpsPort="9443" />
    <!-- end::httpport[] -->

    <!-- tag::springBootApplication[] -->
    <springBootApplication id="users-service"
                           location="thin-users-service-0.0.1-SNAPSHOT.jar"
                           name="users-service" />
    <!-- end::springBootApplication[] -->

</server>